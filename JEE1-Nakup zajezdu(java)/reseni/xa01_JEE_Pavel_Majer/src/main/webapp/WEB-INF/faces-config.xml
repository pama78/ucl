<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xi="http://www.w3.org/2001/XInclude"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
 <navigation-rule>
  <from-view-id>*</from-view-id>
  <navigation-case>
   <from-outcome>mm_trip_list</from-outcome>
   <to-view-id>/view/trip_list.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
  <navigation-case>
   <from-outcome>mm_new_trip</from-outcome>
   <to-view-id>/view/trip.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
  <navigation-case>
   <from-outcome>mm_buy_trip</from-outcome>
   <to-view-id>/view/buy_trip.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
  <navigation-case>
   <from-outcome>mm_client_list</from-outcome>
   <to-view-id>/view/client_list.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
  <navigation-case>
   <from-outcome>mm_home</from-outcome>
   <to-view-id>/index.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/view/trip_list.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>show_detail</from-outcome>
   <to-view-id>/view/trip.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/view/client_list.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>show_detail</from-outcome>
   <to-view-id>/view/client.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  
  <display-name>Show Result</display-name>
  <from-view-id>/view/buy_trip.xhtml</from-view-id>
  <navigation-case>
   <from-action>#{purchaseController.saveContract}</from-action>
   <from-outcome>holiday_saved</from-outcome>
   <to-view-id>/view/buy_trip_result.xhtml</to-view-id>
  </navigation-case>
  </navigation-rule>
 
 
 <application>
  <locale-config>
   <default-locale>en</default-locale>
   <supported-locale>en</supported-locale>
   <supported-locale>cs</supported-locale>
  </locale-config>
  <resource-bundle>
   <base-name>messages</base-name>
   <var>local</var>
  </resource-bundle>
 </application>
</faces-config>
